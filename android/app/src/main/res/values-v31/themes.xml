<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for Android 12+ with splash screen configuration -->
    <style name="Theme.WhirledPeas" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/app_background</item>
        <!-- Android 12+ splash screen: dark background matching app -->
        <item name="android:windowSplashScreenBackground">@color/app_background</item>
        <!-- Remove the circular background behind the icon -->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/app_background</item>
    </style>
</resources>
